<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_source_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/source_icon_content"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_source"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_source"
        app:srcCompat="@drawable/ic_book_24px" />

    <EditText
        android:id="@+id/edittext_source"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittext"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="@string/hint_source"
        android:inputType="textUri"
        android:maxLines="1"
        android:paddingEnd="24dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageview_source_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="http://youtu.be/lkjoiae89" />

</android.support.constraint.ConstraintLayout>